<h1><%= @article.title %></h1>
<%= link_to edit_article_path(@article) do %>
  <i class="fa-regular fa-pen-to-square"></i>
<% end %>

<%= link_to article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Delete #{@article.title}?"} do %>
  <i class="fa-regular fa-trash-can"></i>
<% end %>

<p><%= @article.content %></p>
